<%= form_for(@contact, html: {class: "contact100-form validate-form"}, url: {:action=>"create",:controller=>"contacts"}, :method=>:post, remote:true) do |f| %> 
<span class="contact100-form-title">
  <%= t 'send_msg_title' %>
</span>

<label class="label-input100" for="first-name"><%= t 'tell_us_placeholder' %>*</label>
<div class="wrap-input100 rs1-wrap-input100 validate-input" data-validate="Type first name">
  <%= f.text_field :first_name, :placeholder=> true, :id=>"first-name",:class=>"input100", :required=>"true"%>
  <span class="focus-input100"></span>
</div>
<div class="wrap-input100 rs2-wrap-input100 validate-input" data-validate="Type last name">
  <%= f.text_field :last_name, :placeholder=> true,:id=>"last-name",:class=>"input100", :required=>"true"%>
  <span class="focus-input100"></span>
</div>

<label class="label-input100" for="email"><%= t 'email_text' %> *</label>
<div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
  <%= f.text_field :email, :placeholder=>true,:id=>"email",:class=>"input100", :required=>"true"%>
  <span class="focus-input100"></span>
</div>

<label class="label-input100" for="phone"><%= t 'phone_text' %>*</label>
<div class="wrap-input100">
  <%= f.text_field :phone_no, :placeholder=>true,:id=>"phone_no",:class=>"input100", :required=>"true"%>
  <span class="focus-input100"></span>
</div>

<label class="label-input100" for="message"><%= t 'message_text' %>*</label>
<div class="wrap-input100 validate-input" data-validate = "Message is required">
  <%= f.text_area :message,:id=>"message",:placeholder=>true,:class=>"input100",:required=>"true"%>
  <span class="focus-input100"></span>
</div>

<div class="container-contact100-form-btn">
  <%=f.submit :class =>"contact100-form-btn" %>
</div>
<% end %>

<div class="contact100-more flex-col-c-m" style="background-image: url('/assets/bg-01.jpg');">
  <div class="flex-w size1 p-b-47">
    <div class="txt1 p-r-25">
      <span class="lnr lnr-map-marker"></span>
    </div>
    <div class="flex-col size2">
      <span class="txt1 p-b-20">
        <%=t 'address_text' %>
      </span>
      <span class="txt2">
        <%=t 'address' %>
      </span>
    </div>
  </div>
  <div class="dis-flex size1 p-b-47">
    <div class="txt1 p-r-25">
      <span class="lnr lnr-phone-handset"></span>
    </div>
    <div class="flex-col size2">
      <span class="txt1 p-b-20">
        <%= t 'lets_talk' %>
      </span>
      <span class="txt3">
        +1 800 1236879
      </span>
    </div>
  </div>
  <div class="dis-flex size1 p-b-47">
    <div class="txt1 p-r-25">
      <span class="lnr lnr-envelope"></span>
    </div>
    <div class="flex-col size2">
      <span class="txt1 p-b-20">
        <%= t 'support' %>
      </span>
      <span class="txt3">
        <%= t 'contact' %>
      </span>
    </div>
  </div>

